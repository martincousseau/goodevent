doctype html
html(lang='en')
    head
        title= title
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous")
    body
        div.container-fluid
            nav(class="navbar navbar-light bg-light justify-content-between")
                button(class="navbar-brand mb-0 h1" href='/home') Good Event
                a(href="/home" class="btn btn-primary") Home

                if user
                    a(href="/event" class="btn btn-primary") Créer un évènement
                    form.form-inline(method='POST' action="/logout")
                        span.mr-3 #{user.username}
                        button(class="btn btn-primary" type="submit") Déconnexion

            h1= title
            block content
